{
  "name": "chat-triggers-template",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "lint": "npx eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "npx eslint --fix \"**/*.{ts,tsx}\"",
    "lint:staged": "yarn lint-staged --concurrent false",
    "husky:prep": "npx husky install"
  },
  "author": {
    "name": "Marni",
    "url": "https://github.com/ItzMarni"
  },
  "lint-staged": {
    "*.{js}": [
      "npx prettier --write",
      "npx eslint --fix",
      "npx eslint"
    ],
    "*.json": [
      "npx prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  }
}
